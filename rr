    <script>
        // Hintergrundsterne erstellen
        const stars = document.getElementById('stars');
        for (let i = 0; i < 150; i++) {
            const star = document.createElement('div');
            star.classList.add('star');
            star.style.width = `${Math.random() * 3}px`;
            star.style.height = star.style.width;
            star.style.left = `${Math.random() * 100}%`;
            star.style.top = `${Math.random() * 100}%`;
            star.style.animationDuration = `${2 + Math.random() * 5}s`;
            stars.appendChild(star);
        }
        
        // Demo-Funktionalit√§t
        document.getElementById('generateBtn').addEventListener('click', function() {
            const mood = document.getElementById('moodInput').value;
            const output = document.getElementById('output');
            
            if (!mood) {
                output.innerHTML = '<p>Bitte beschreibe zuerst eine Stimmung oder lade ein Bild hoch.</p>';
                return;
            }
            
            // Ladeanimation
            output.innerHTML = '<p>Analysiere deine Eingabe... <span class="pulse">‚ú®</span></p>';
            
            // Simuliere eine Verz√∂gerung f√ºr die "KI-Verarbeitung"
            setTimeout(() => {
                const responses = [
