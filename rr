        // Sprachaufnahme-Funktionalit√§t (nur als Demo)
        let isRecording = false;
        
        function toggleRecording() {
            isRecording = !isRecording;
            const btn = document.getElementById('recordBtn');
            
            if (isRecording) {
                btn.innerHTML = 'üé§ Aufnahme stoppen';
                btn.style.background = 'linear-gradient(45deg, var(--accent), #ff6b6b)';
                // Hier w√ºrde echte Aufnahmelogik stehen
            } else {
                btn.innerHTML = 'üé§ Sprachaufnahme starten';
                btn.style.background = 'linear-gradient(45deg, var(--primary), var(--accent))';
                // Aufnahme stoppen und verarbeiten
            }
        }
